extends layout
block content
  body
      .col-md-10
        h4 Username : #{name}
        h5 Total Balance : #{total}
        table.table.table-striped
          thead
            tr(style='background-color: #0366fc; color:white;')
              th Date Deposited
                br
                span (yy-mm-dd-hh)
              th Amount

            tbody
              each deposit in deposits
                tr
                  td #{moment(deposit.createdAt).format("YYYY-MM-DD HH")}
                  td= deposit.amount

