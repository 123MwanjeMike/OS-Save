extends layout
block content
  body
      .col-md-10
        h4 Username :  
          span(style="color: #3493eb;") #{name}
        h5 Total Balance : 
          span(style="color: #3493eb;") #{total}
        table.table.table-striped
          thead
            tr(style='background-color: #3493eb; color:white;')
              th Date Deposited
                br
                span (yy-mm-dd-hh)
              th Amount (EUR)

            tbody
              each deposit in deposits
                tr
                  td #{moment(deposit.createdAt).format("YYYY-MM-DD")}
                  td= deposit.amount

