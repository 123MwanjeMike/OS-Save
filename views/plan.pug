doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z' crossorigin='anonymous')
  link(rel="stylesheet", href="/card.css")
  style.
    body{
    padding: 0;
    margin: 0;
    }
    .homediv{
    border: #3493eb 2px solid;
    border-radius: 12px;
    width: 100%;
    margin-top: 10px;
    color: #3493eb;
    }
    .getstarted{
    background-color: #3493eb;
    width: 100%;
    color: #ffffff;
    border: #3493eb 1px solid;
    padding:10px;
    border-radius: 12px;
    margin-top: 10px;
    }
    .getstarted:hover{
    box-shadow:  5px 10px #77dae6;
    transition: 1s;
    }
    .image-div{
    background-color: #3493eb;
    color: #ffffff;
    border: #3493eb 1px solid;
    padding:10px;
    border-radius: 12px;
    margin-top: 10px;
    }
    .image-home{
    width: 100%;
    }
    .plans{
    margin-top: 100px;
    }
    .planimg{
    width:200px;
    height:200px;
    border-radius: 50%;
    border: #3493eb solid 5px;
    }
    .plans-offered{
    text-align: center;
    color: #3493eb;
    font-size: 25px;
    font-weight: bold;
    margin-top: 10px;
    }
    .login{
      background-color:#3493eb;
      color: white;
      border-radius:5px;
    }

include includes/navbar
